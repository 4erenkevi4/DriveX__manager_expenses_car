<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_backg_gradient3">

    <include
        android:id="@+id/include3"
        layout="@layout/main_toolbar" />

    <TextView
        android:id="@+id/desc_notification_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/what_remind"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="@dimen/default_margin_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include3" />

    <LinearLayout
        android:id="@+id/notify_container1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/default_margin_16"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc_notification_layout">

        <ImageView
            android:id="@+id/notify_to"
            style="@style/Notify_icon"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/notify_serv" />

        <ImageView
            android:id="@+id/notify_drive"
            style="@style/Notify_icon"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/notify_drive" />

        <ImageView
            android:id="@+id/notify_wash"
            style="@style/Notify_icon"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/notify_wash" />

        <ImageView
            android:id="@+id/notify_pitstop"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:src="@drawable/notify_pitstop" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notify_text_container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notify_container1">

        <TextView
            style="@style/Description_edit_text"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/plan_Repair"
            android:textColor="@color/yellow20"
            android:textSize="11sp" />

        <TextView
            style="@style/Description_edit_text"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/Trip"
            android:textColor="@color/yellow20"
            android:textSize="11sp" />

        <TextView
            style="@style/Description_edit_text"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/car_wash"
            android:textColor="@color/yellow20"
            android:textSize="11sp" />

        <TextView
            style="@style/Description_edit_text"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/tire_fitting"
            android:textColor="@color/yellow20"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notify_container2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notify_text_container1">

        <ImageView
            android:id="@+id/notify_diagnost"
            style="@style/Notify_icon"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/notify_diagnost" />

        <ImageView
            android:id="@+id/notify_strah"
            style="@style/Notify_icon"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/notify_strah" />

        <ImageView
            android:id="@+id/notify_license"
            style="@style/Notify_icon"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/notify_license" />

        <ImageView
            android:id="@+id/notify_oil"
            style="@style/Notify_icon"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/notify_oil" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notify_text_container2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/notify_container3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notify_container2">

        <TextView
            style="@style/Description_edit_text"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/diagnostic"
            android:textColor="@color/yellow20"
            android:textSize="11sp" />

        <TextView
            style="@style/Description_edit_text"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/insurance"
            android:textColor="@color/yellow20"
            android:textSize="11sp" />

        <TextView
            style="@style/Description_edit_text"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/renew_the_license"
            android:textColor="@color/yellow20"
            android:textSize="9sp" />

        <TextView
            style="@style/Description_edit_text"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/oil_change"
            android:textColor="@color/yellow20"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notify_container3"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notify_container2">

        <ImageView
            android:id="@+id/notify_pay"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/Notify_icon"
            android:layout_weight="1"
            android:src="@drawable/notify_pay" />

        <ImageView
            android:id="@+id/notify_texosmotr"
            style="@style/Notify_icon"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/notify_texosm" />

        <ImageView
            android:id="@+id/notify_shopping"
            style="@style/Notify_icon"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:src="@drawable/notify_shopping" />

        <ImageView
            android:id="@+id/notify_other"
            style="@style/Notify_icon"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginTop="9dp"

            android:layout_weight="1"
            android:src="@drawable/notify_other" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notify_text_container3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notify_container3">

        <TextView
            style="@style/Description_edit_text"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/payment"
            android:textColor="@color/yellow20"
            android:textSize="11sp" />

        <TextView
            style="@style/Description_edit_text"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/tech_Inspection"
            android:textColor="@color/yellow20"
            android:textSize="11sp" />

        <TextView
            style="@style/Description_edit_text"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/your_buy"
            android:textColor="@color/yellow20"
            android:textSize="12sp" />

        <TextView
            style="@style/Description_edit_text"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/other"
            android:textColor="@color/yellow20"
            android:textSize="12sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/editText_desc_of_notification"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="@dimen/default_margin_16"
        android:layout_marginEnd="@dimen/default_margin_16"
        android:gravity="center"
        android:hint="@string/add_detail_reminder"
        android:textColorHint="@color/gray20"
        android:textSize="12sp"
        android:layout_marginTop="@dimen/default_margin_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notify_text_container3" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/settime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_dimensions_32"
        android:gravity="center"
        android:src="@drawable/ic_baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>