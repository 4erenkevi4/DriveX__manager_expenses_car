<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.setting.SettingFragment">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/default_margin_16"
        android:text="@string/units"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textField_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_8"
        android:hint="@string/volume_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="11dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textField_Fuel_consumption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_8"
        android:hint="@string/Fuel_consumption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textField_volume">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="11dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textField_Currency_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_8"
        android:hint="@string/Currency_selection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textField_Fuel_consumption">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="11dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/group_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="@dimen/default_margin_8"
        app:layout_constraintTop_toBottomOf="@+id/textField_Currency_selection">
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/notifycations_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_8"
        android:layout_marginTop="@dimen/default_margin_16"
        android:text="@string/Notifications_settings"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_divider" />

    <LinearLayout
        android:id="@+id/root_notify_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/default_margin_16"
        android:paddingEnd="@dimen/default_margin_16"
        app:layout_constraintTop_toBottomOf="@+id/notifycations_label">


        <LinearLayout
            android:id="@+id/layout_push_notifications_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/description_width"
            android:gravity="start|center">

            <ImageView
                android:layout_width="@dimen/item_dimensions_32"
                android:layout_height="@dimen/item_dimensions_32"
                android:contentDescription="@string/Notifications_settings"
                android:src="@drawable/ic_notifications" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin_16"
                android:layout_weight="1"
                android:text="@string/push_notifications" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin_16"
                android:checked="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_location_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/description_width"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/item_dimensions_32"
                android:layout_height="@dimen/item_dimensions_32"
                android:contentDescription="@string/Notifications_settings"
                android:src="@drawable/ic_location_on" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin_16"
                android:layout_weight="1"
                android:text="@string/country" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin_16"
                android:entries="@array/country_options"
                android:gravity="end"
                android:spinnerMode="dropdown" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_day_notification_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/description_width"
            android:gravity="start|center">

            <ImageView
                android:layout_width="@dimen/item_dimensions_32"
                android:layout_height="@dimen/item_dimensions_32"
                android:contentDescription="@string/Notifications_settings"
                android:src="@drawable/ic_calendar_settings" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin_16"
                android:layout_weight="1"
                android:text="@string/day_notifications" />

            <LinearLayout
                android:id="@+id/date_picker_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin_16"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/day_of_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/value_date_of_notifications" />

                <ImageView
                    android:layout_width="@dimen/item_dimensions_32"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_time_notifications_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/description_width"
            android:gravity="start|center">

            <ImageView
                android:layout_width="@dimen/item_dimensions_32"
                android:layout_height="@dimen/item_dimensions_32"
                android:contentDescription="@string/Notifications_settings"
                android:src="@drawable/ic_access_time" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin_16"
                android:layout_weight="1"
                android:text="@string/time_notification" />

            <LinearLayout
                android:id="@+id/time_picker_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin_16"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/time_of_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/value_time_of_notifications" />

                <ImageView
                    android:layout_width="@dimen/item_dimensions_32"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/other_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_8"
        android:layout_marginTop="@dimen/default_margin_16"
        android:text="@string/other_settings"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/root_notify_container" />

    <LinearLayout
        android:id="@+id/sound_app_lounch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/description_width"
        android:gravity="start|center"
        app:layout_constraintTop_toBottomOf="@+id/other_label"
        android:layout_margin="@dimen/default_margin_16"
        >

        <ImageView
            android:layout_width="@dimen/item_dimensions_32"
            android:layout_height="@dimen/item_dimensions_32"
            android:contentDescription="@string/Notifications_settings"
            android:src="@drawable/ic_notifications" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_16"
            android:layout_weight="1"
            android:text="@string/launch_sound" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_notification_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_16"
            android:checked="true" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>